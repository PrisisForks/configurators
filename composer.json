{
    "name": "narrowspark/configurators",
    "type": "discovery-configurator",
    "description": "Discovery configurators for the narrowspark framework",
    "keywords": [
        "narrowspark",
        "discovery",
        "configurators"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "composer/composer": "^1.6.0",
        "mockery/mockery": "^1.0.0",
        "narrowspark/discovery-common": "^0.1.7",
        "narrowspark/coding-standard": "^1.0.0",
        "narrowspark/testing-helper": "^6.0.0",
        "phpunit/phpunit": "^7.2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Narrowspark\\Discovery\\Configurator\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Narrowspark\\Discovery\\Configurator\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "coverage": "phpunit --coverage-html=\"build/logs\"",
        "cs": "php-cs-fixer fix",
        "phpstan": "phpstan analyse -c phpstan.neon -l 7 src --memory-limit=-1",
        "test": "phpunit"
    },
    "support": {
        "issues": "https://github.com/narrowspark/configurators/issues",
        "source": "https://github.com/narrowspark/configurators"
    }
}
